<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="#fff"
  android:orientation="vertical"
  >
  <TextView android:id="@+id/headerTextView"
        android:layout_height="60dp"
        android:layout_width="fill_parent"
        android:background="#223"
        android:textColor="#fff"
        android:gravity="center"
        android:text="PROFILE"
        android:textStyle="bold"
        android:textSize="24dp"/>
<ScrollView android:id="@+id/scroll"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<LinearLayout
  android:id="@+id/main"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="#fff"
  android:orientation="vertical"
  >
  
  <LinearLayout android:id="@+id/aboutLinearLayout"
      android:layout_width="fill_parent"
      android:layout_height="50dp"
      android:orientation="horizontal"
      >
      <TextView android:id="@+id/aboutTab"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="About"
          android:padding="10dp"
          android:textColor="#000"
          android:singleLine="true"
          android:ellipsize="end"
          android:textStyle="bold"
          android:textSize="18dp"/>
      
  </LinearLayout>
  <View
    android:layout_width="fill_parent"
    android:layout_height="1dp"
    android:background="@android:color/darker_gray"/>
  
  <LinearLayout android:id="@+id/settingLinearLayout"
      android:layout_width="fill_parent"
      android:layout_height="50dp"
      android:orientation="horizontal"
      >
      <TextView android:id="@+id/settingTab"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Settings"
          android:padding="10dp"
          android:textColor="#000"
          android:singleLine="true"
          android:ellipsize="end"
          android:textStyle="bold"
          android:textSize="18dp"/>
      
  </LinearLayout>
  <View
    android:layout_width="fill_parent"
    android:layout_height="1dp"
    android:background="@android:color/darker_gray"/>
  
  
  <LinearLayout android:id="@+id/inviteHeadingLinearLayout"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:background="#ccc"
      >
      <TextView android:id="@+id/inviteTab"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Invite To SMSALL"
          android:paddingLeft="10dp"
          android:textColor="#fff"
          android:singleLine="true"
          android:ellipsize="end"
          android:textStyle="bold"
          android:textSize="18dp"/>
  </LinearLayout>
  
   <LinearLayout android:id="@+id/inviteSMSLinearLayout"
      android:layout_width="fill_parent"
      android:layout_height="50dp"
      android:orientation="horizontal"
      >
      <TextView android:id="@+id/inviteSMSTab"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Invite by SMS"
          android:padding="10dp"
          android:textColor="#000"
          android:singleLine="true"
          android:ellipsize="end"
          android:textStyle="bold"
          android:textSize="18dp"/>
      
  </LinearLayout>
  <View
    android:layout_width="fill_parent"
    android:layout_height="1dp"
    android:background="@android:color/darker_gray"/>
  
  <LinearLayout android:id="@+id/inviteFacebookLinearLayout"
      android:layout_width="fill_parent"
      android:layout_height="50dp"
      android:orientation="horizontal"
      >
      <TextView android:id="@+id/inviteFacebookTab"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Share on other Apps"
          android:padding="10dp"
          android:textColor="#000"
          android:singleLine="true"
          android:ellipsize="end"
          android:textStyle="bold"
          android:textSize="18dp"/>
      
  </LinearLayout>
  <View
    android:layout_width="fill_parent"
    android:layout_height="1dp"
    android:background="@android:color/darker_gray"/>
  
  
  <LinearLayout android:id="@+id/inviteMailLinearLayout"
      android:layout_width="fill_parent"
      android:layout_height="50dp"
      android:orientation="horizontal"
      >
      <TextView android:id="@+id/inviteMailTab"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Invite by Mail"
          android:padding="10dp"
          android:textColor="#000"
          android:singleLine="true"
          android:ellipsize="end"
          android:textStyle="bold"
          android:textSize="18dp"/>
      
  </LinearLayout>
  
  <LinearLayout android:id="@+id/privacyheadingLinearLayout"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:background="#ccc"
      >
      <TextView android:id="@+id/privacyheadingTab"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Privacy"
          android:paddingLeft="10dp"
          android:textColor="#fff"
          android:singleLine="true"
          android:ellipsize="end"
          android:textStyle="bold"
          android:textSize="18dp"/>
  </LinearLayout>
  
    <LinearLayout android:id="@+id/privacyPolicyLinearLayout"
      android:layout_width="fill_parent"
      android:layout_height="50dp"
      android:orientation="horizontal"
      >
      <TextView android:id="@+id/inviteTweetTab"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Privacy Policy"
          android:padding="10dp"
          android:textColor="#000"
          android:singleLine="true"
          android:ellipsize="end"
          android:textStyle="bold"
          android:textSize="18dp"/>
      
  </LinearLayout>
  <View
    android:layout_width="fill_parent"
    android:layout_height="1dp"
    android:background="@android:color/darker_gray"/>
  
   
  
    <LinearLayout android:id="@+id/exitLinearLayout"
      android:layout_width="fill_parent"
      android:layout_height="50dp"
      android:orientation="horizontal"
      >
      <TextView android:id="@+id/exitTab"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Exit"
          android:padding="10dp"
          android:textColor="#000"
          android:singleLine="true"
          android:ellipsize="end"
          android:textStyle="bold"
          android:textSize="18dp"/>
      
  </LinearLayout>
  <View
    android:layout_width="fill_parent"
    android:layout_height="1dp"
    android:background="@android:color/darker_gray"/>
 </LinearLayout>
 
</ScrollView>
</LinearLayout>